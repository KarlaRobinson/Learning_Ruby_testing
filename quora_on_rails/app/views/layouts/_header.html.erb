<div class='navbar navbar-default'>
 <div class='navbar-inner'>

  <!-- <p><%=  logged_in? %></p> -->

    <%= link_to 'QUORA', root_path, :class => 'navbar-brand' %>

    <% if logged_in? %>
      <div class='collapse navbar-collapse' id='bs-example-navbar-collapse-1'>
        <ul class='nav navbar-nav'>
          <li><%= link_to 'Questions', questions_path %></li>
          <li><%= link_to 'Create New Question', new_question_path %></li>
          <li class='dropdown'>
            <a href='#' class='dropdown-toggle' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false'>Dropdown <span class='caret'></span></a>
            <ul class='dropdown-menu'>
              <li><%= link_to 'Action', '#' %></li>
              <li><%= link_to 'Another action', '#' %></li>
              <li><%= link_to 'Something else here', '#' %></li>
              <li role='separator' class='divider'></li>
              <li><%= link_to 'Separated link', '#' %></li>
              <li role='separator' class='divider'></li>
              <li><%= link_to 'One more separated link', '#' %></li>
            </ul>
          </li>
        </ul>
        <ul class='nav navbar-nav navbar-right'>
          <li class='dropdown active'>
            <a href='#' class='dropdown-toggle' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false'><%= current_user.name %> <span class='caret'></span></a>
            <ul class='dropdown-menu'>
              <li class='active'><%= link_to 'Profile', user_path(:id => current_user.id) %></li>
              <li><%= link_to 'Another action', '#' %></li>
              <li><%= link_to 'Something else here', '#' %></li>
              <li role='separator' class='divider'></li>
              <li><%= link_to 'Logout', users_logout_path %></li>
            </ul>
          </li>
        </ul>
      </div>

    <% else %>

        <!-- Collapsable nav bar -->
      <div class='container'>
        <!-- Start of the nav bar content -->
        <div class='nav-collapse'><!-- Other nav bar content -->
          <!-- The drop down menu -->
          <ul class='nav pull-right'>
            <li class='dropdown'>
              <a class='dropdown-toggle' href='#' data-toggle='dropdown'>Sign In <strong class='caret'></strong></a>
              <div class='dropdown-menu' style='padding: 15px; padding-bottom: 0px;'>

                <!-- Login form here -->
                <div class='form-group'>
                  <%= form_for @user, url: {action: 'login'}  do |f| %>
                    <%#= f.label :email %>
                    <%= f.text_field :email, :placeholder => 'Email address', :class => 'form-control' %>
                    <%#= f.label :password %>
                    <%= f.password_field :password, :placeholder => 'Password', :class => 'form-control' %>
                    <%= f.check_box :name %>
                    <br>
                    <%= f.submit 'Login', :class => 'btn btn-primary form-control' %>
                  <% end %>
                </div>

              </div>
            </li>
          </ul>
        </div>

      </div>
    <% end %>
  </div>
</div>



