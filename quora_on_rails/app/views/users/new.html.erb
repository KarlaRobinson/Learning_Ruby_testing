<div class='row'>
  <div class='col-md-12'>

    <% if flash[:errors] %>
      <div class='alert alert-warning'>><%= flash[:notice] %></div>
    <% end %>

    <% if !logged_in? %>
    <div class='form-inline text-center'>
      <p>New to Quora? Register with us today!</p>
      <div class='form-group'>
        <%= form_for @user do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name, :placeholder => 'Jane Doe', :class => 'form-control' %>
          <%= f.label :email %>
          <%= f.text_field :email, :placeholder => 'janedoe@gmail.com', :class => 'form-control' %>
<!--  </div>

      <div class='form-group'> -->
          <%= f.label :password %>
          <%= f.password_field :password, :placeholder => '********', :class => 'form-control' %>
          <%= f.submit :class => 'btn btn-medium btn-primary' %>
        <% end %>
      </div>
    </div>
    <% end %>


  </div>
</div>

<div class='row'>
  <div class='col-md-12'>
    <img src='https://educationusa.state.gov/sites/default/files/styles/marquee_1226x819/public/field_marquee_background_image/istock_000017948019_full.jpg?itok=aECpc2nx' class='img-responsive'>
   <div class="caption text-center">
      Answering life questions through crowdsourcing
    </div>
  </div>
</div>
