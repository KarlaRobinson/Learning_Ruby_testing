<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h3>QUORA Questions</h3>
    <% if @questions.length > 0 %>
      <ol class="list-unstyled">
          <%= render(@questions) || "Create the first question!" %>
      </ol>
    <% else %>
      <div class='media well'>
        No questions have been created yet
      </div>
    <% end %>
  </div>
</div>